<Window x:Class="QuickSub.SubtitleOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuickSub"
        Title="QuickSub Overlay" 
        Height="200" Width="900"
        MinHeight="150" MinWidth="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="Manual"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">
    
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Button style for control panel -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#AA2A2A2A"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#BB3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CC4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Enhanced caption style -->
        <Style x:Key="CaptionBlockStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Segoe UI, Arial, sans-serif" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Main layout with subtitle area and control panel -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Subtitle display area -->
        <Border x:Name="BorderBackground"
                Grid.Column="0"
                Background="#BB1A1A1A" 
                CornerRadius="12" 
                Margin="8,8,4,8"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Original subtitle text -->
                <Border x:Name="PrimaryTextBorder"
                        Grid.Row="0"
                        Padding="12,8"
                        Background="Transparent"
                        VerticalAlignment="Center"
                        Visibility="{Binding ShowOriginal, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock x:Name="PrimaryTextBlock"
                               Text="{Binding CurrentCaption, UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource CaptionBlockStyle}"
                               FontSize="16">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3"
                                            Direction="270"
                                            ShadowDepth="1"
                                            Color="Black"
                                            Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
                
                <!-- Divider line -->
                <Rectangle Grid.Row="1" 
                          Height="1" 
                          Fill="#40FFFFFF" 
                          Margin="20,0"
                          Visibility="{Binding ShowTranslation, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- Translation text -->
                <Border x:Name="SecondaryTextBorder"
                        Grid.Row="2"
                        Padding="12,8"
                        Background="Transparent"
                        VerticalAlignment="Center"
                        Visibility="{Binding ShowTranslation, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock x:Name="SecondaryTextBlock"
                               Text="{Binding TranslatedCaption, UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource CaptionBlockStyle}"
                               FontSize="15"
                               FontStyle="Italic"
                               Opacity="0.9">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3"
                                            Direction="270"
                                            ShadowDepth="1"
                                            Color="Black"
                                            Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
        
        <!-- Control panel on the right -->
        <Border Grid.Column="1"
                Background="#BB1A1A1A"
                CornerRadius="6"
                Margin="4,8,8,8"
                Padding="6"
                Visibility="Hidden"
                x:Name="ControlPanel"
                MouseEnter="ControlPanel_MouseEnter"
                MouseLeave="ControlPanel_MouseLeave">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Row 1: Font buttons -->
                <Grid Grid.Row="0" Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="FontIncreaseButton" 
                            Grid.Column="0"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="FontSizeIncrease_Click" 
                            ToolTip="Increase Font Size"
                            Margin="1"
                            Height="26"
                            Width="26">A+</Button>
                    <Button Name="FontDecreaseButton" 
                            Grid.Column="1"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="FontSizeDecrease_Click" 
                            ToolTip="Decrease Font Size"
                            Margin="1"
                            Height="26"
                            Width="26">A-</Button>
                </Grid>
                
                <!-- Row 2: Color buttons -->
                <Grid Grid.Row="1" Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="ColorButton" 
                            Grid.Column="0"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="TextColorCycle_Click" 
                            ToolTip="Change Text Color"
                            Margin="1"
                            Height="26"
                            Width="26">🎨</Button>
                    <Button Name="BackgroundColorButton" 
                            Grid.Column="1"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="BackgroundColorCycle_Click" 
                            ToolTip="Change Background Color"
                            Margin="1"
                            Height="26"
                            Width="26">🟦</Button>
                </Grid>
                
                <!-- Row 3: Opacity buttons -->
                <Grid Grid.Row="2" Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="OpacityIncreaseButton" 
                            Grid.Column="0"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="OpacityIncrease_Click" 
                            ToolTip="Increase Opacity"
                            Margin="1"
                            Height="26"
                            Width="26">↑</Button>
                    <Button Name="OpacityDecreaseButton" 
                            Grid.Column="1"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="OpacityDecrease_Click" 
                            ToolTip="Decrease Opacity"
                            Margin="1"
                            Height="26"
                            Width="26">↓</Button>
                </Grid>
                
                <!-- Row 4: Display and close buttons -->
                <Grid Grid.Row="3" Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="OnlyModeButton" 
                            Grid.Column="0"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="OnlyModeButton_Click" 
                            ToolTip="Toggle Display Mode"
                            Margin="1"
                            Height="26"
                            Width="26">⚊</Button>
                    <Button Name="CloseButton" 
                            Grid.Column="1"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="CloseButton_Click" 
                            ToolTip="Close Application"
                            Margin="1"
                            Height="26"
                            Width="26">✖️</Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>