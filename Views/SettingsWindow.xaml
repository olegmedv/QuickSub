<Window x:Class="QuickSub.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickSub Settings" 
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Subtitle Translator Settings" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        
        <!-- Settings Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Group: Translation -->
                <GroupBox Header="Translation" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Translation: Auto-detect â†’ Target Language (real-time)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <TextBlock Text="Using Google Translate API + fallback dictionary" Margin="0,0,0,5" FontStyle="Italic" FontSize="12" Foreground="Gray"/>
                        <TextBlock Text="âš¡ Fast (100-200ms) â€¢ ðŸŒ Online â€¢ ðŸŽ¯ High accuracy with auto-detection" Margin="0,0,0,5" FontStyle="Italic" FontSize="10" Foreground="DarkGreen"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Group: Google Translate Settings -->
                <GroupBox Header="Google Translate Settings" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Target Language:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="TargetLanguageComboBox" Height="25">
                            <ComboBoxItem Content="Russian (ru)" Tag="ru" IsSelected="True"/>
                            <ComboBoxItem Content="Chinese (zh)" Tag="zh"/>
                            <ComboBoxItem Content="English (en)" Tag="en"/>
                            <ComboBoxItem Content="Spanish (es)" Tag="es"/>
                            <ComboBoxItem Content="French (fr)" Tag="fr"/>
                            <ComboBoxItem Content="German (de)" Tag="de"/>
                            <ComboBoxItem Content="Japanese (ja)" Tag="ja"/>
                            <ComboBoxItem Content="Korean (ko)" Tag="ko"/>
                        </ComboBox>
                        
                        <TextBlock Text="ðŸŒ Google Translate provides high-quality translations with automatic language detection" 
                                   Margin="0,10,0,0" 
                                   FontStyle="Italic" 
                                   FontSize="11" 
                                   Foreground="DarkBlue" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Group: Font Size -->
                <GroupBox Header="Font Size" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Font size:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="FontSizeComboBox" Height="25">
                            <ComboBoxItem Content="12" Tag="12"/>
                            <ComboBoxItem Content="14" Tag="14"/>
                            <ComboBoxItem Content="16" Tag="16"/>
                            <ComboBoxItem Content="18" Tag="18" IsSelected="True"/>
                            <ComboBoxItem Content="20" Tag="20"/>
                            <ComboBoxItem Content="22" Tag="22"/>
                            <ComboBoxItem Content="24" Tag="24"/>
                            <ComboBoxItem Content="26" Tag="26"/>
                            <ComboBoxItem Content="28" Tag="28"/>
                            <ComboBoxItem Content="30" Tag="30"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                
                <!-- Group: Display Mode -->
                <GroupBox Header="Display Mode" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Choose what to display:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DisplayModeComboBox" Height="25">
                            <ComboBoxItem Content="Show both original and translation" Tag="0" IsSelected="True"/>
                            <ComboBoxItem Content="Show translation only" Tag="1"/>
                            <ComboBoxItem Content="Show original only" Tag="2"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                
                <!-- Group: Subtitle Colors -->
                <GroupBox Header="Subtitle Colors" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Text color:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ColorComboBox" Height="25">
                            <ComboBoxItem Tag="1" IsSelected="True">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="White" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="White"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="2">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Orange" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Orange"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="3">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="LightGreen" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Light Green"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="4">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="SkyBlue" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Sky Blue"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="5">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="RoyalBlue" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Royal Blue"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="6">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Magenta" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Magenta"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="7">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Crimson" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Crimson"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="8">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="DarkGray" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Dark Gray"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="9">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Gold" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Gold"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="10">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Violet" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Violet"/>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                        
                        <TextBlock Text="Background color:" Margin="0,10,0,5"/>
                        <ComboBox x:Name="BackgroundColorComboBox" Height="25">
                            <ComboBoxItem Tag="1">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="White" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="White"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="2">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Orange" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Orange"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="3">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="LightGreen" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Light Green"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="4">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="SkyBlue" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Sky Blue"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="5">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="RoyalBlue" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Royal Blue"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="6">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Magenta" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Magenta"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="7">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Crimson" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Crimson"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="8" IsSelected="True">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="DarkGray" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Dark Gray"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="9">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Gold" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Gold"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="10">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="Violet" Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0"/>
                                    <TextBlock Text="Violet"/>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                
                <!-- Group: Text Style -->
                <GroupBox Header="Text Style" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Background opacity:" Margin="0,10,0,5"/>
                        <ComboBox x:Name="OpacityComboBox" Height="25">
                            <ComboBoxItem Content="10%" Tag="25"/>
                            <ComboBoxItem Content="20%" Tag="50"/>
                            <ComboBoxItem Content="30%" Tag="75"/>
                            <ComboBoxItem Content="40%" Tag="100"/>
                            <ComboBoxItem Content="50%" Tag="125"/>
                            <ComboBoxItem Content="60%" Tag="150" IsSelected="True"/>
                            <ComboBoxItem Content="70%" Tag="175"/>
                            <ComboBoxItem Content="80%" Tag="200"/>
                            <ComboBoxItem Content="90%" Tag="225"/>
                            <ComboBoxItem Content="100%" Tag="250"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                
                <!-- Group: Window Position -->
                <GroupBox Header="Window Position" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <Button x:Name="ResetPositionButton" 
                                Content="Reset overlay position to center bottom" 
                                Height="30" 
                                Click="ResetPositionButton_Click"
                                ToolTip="Reset the overlay window to default position"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button x:Name="DefaultsButton" 
                    Content="Default" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="DefaultsButton_Click"/>
            <Button x:Name="ApplyButton" 
                    Content="Apply" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="ApplyButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Width="100" 
                    Height="30" 
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>